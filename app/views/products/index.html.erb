<section>
    <div class="container">
        <div class="row">
            <div class="col-md-12 landing">
                <h1>SWEATSHIRTS</h1>
            </div>
        </div>
    </div>
</section><br>

<section class="products">
    <div class="container">
        <div class="row">


            <% @products.each do |product| %>
            <div class="col-md-4">
                <%= link_to(product_path(product)) do %>
                <div class="card">
                    <div class="card-bg-img" style="background-image: url('<%= product.photo %>');"></div>
                    <div class="card-block">
                        <p class="product_index_name_pro"><%= product.name %></p>
                    </div>
                </div>
                <% end %>
            </div>
            <% end %>

            <% if @user && @user.id == 1 %>
            <div class="col-md-4">
                <div class="card">
                    <div class="card-bg-img" style="background-image: url('https://www.nutanix.com/wp-content/uploads/2015/01/add.png');"></div>
                    <div class="card-block">
                        <p class="product_index_name_pro"><%= link_to 'Add new product', new_product_path %></p>
                    </div>
                </div>
            </div>
            <% end %>

        </div>
    </div>
</section>
